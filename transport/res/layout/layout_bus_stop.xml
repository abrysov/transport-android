<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/iv_first_road_part"
        android:layout_width="90dp"
        android:layout_height="21dp"
        android:layout_alignParentBottom="true"
        android:background="@color/road_color" />

    <ImageView
        android:id="@+id/iv_second_road_part"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/iv_first_road_part"
        android:background="@color/active_road_color" />

    <ImageView
        android:id="@+id/iv_bus_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:src="@drawable/ic_bus_stop" />

    <LinearLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/iv_bus_stop"
                    android:ellipsize="end">
        <TextView
                android:id="@+id/tv_bus_stop_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:lineSpacingMultiplier="0.8"
                android:textSize="65sp" />


        <TextView
                android:id="@+id/tv_bus_stop_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:paddingLeft="10dp"
                android:lineSpacingMultiplier="0.8"
                android:textSize="65sp"
                android:visibility="gone"/>


    </LinearLayout>


</merge>
