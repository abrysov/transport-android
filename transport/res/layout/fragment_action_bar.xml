<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_height"
    android:background="@color/action_bar_background"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/action_bar_vehicle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:lines="1"
        android:text=""
        android:textColor="@color/action_bar_text_primary"
        android:textSize="@dimen/action_bar_text_primary"
        android:paddingLeft="@dimen/action_bar_common_padding"
        android:paddingRight="@dimen/action_bar_common_padding"
        android:fontFamily="fonts/Proxima Nova Extra Condensed Bold.otf" />

    <TextView
        android:id="@+id/action_bar_vehicle_stop"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:text="@string/route_not_set"
        android:textColor="@color/action_bar_text_secondary"
        android:textSize="@dimen/action_bar_text_secondary"
        android:fontFamily="fonts/Proxima Nova Semibold.otf" />

    <View
        android:layout_width="@dimen/action_bar_delimiter_width"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/action_bar_divider_padding"
        android:layout_marginRight="@dimen/action_bar_divider_padding"
        android:background="@color/action_bar_delimiter" />

    <FrameLayout
        android:id="@+id/action_bar_info_container"
        android:layout_width="@dimen/action_bar_right_part_width"
        android:layout_height="match_parent"
        android:gravity="center_vertical">
    </FrameLayout>

</LinearLayout>